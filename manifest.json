{
  "name": "Looks Awesome - Envato Sign",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Add custom sign to each comment automatically",
  "homepage_url": "http://looks-awesome.com/",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Looks Awesome - Envato Sign",
    "default_popup": "src/options_custom/index.html"
  },
  "permissions": [
    "activeTab",
    "http://team.looks-awesome.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://codecanyon.net/*",
		"http://themeforest.net/*"
      ],
      "js": [
		"js/jquery/jquery.js",
        "src/inject/inject.js"
      ]
    }
  ]
}